apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: {{ volume_storage_class_name }}
provisioner: {{ volume_provisioner_name }}
reclaimPolicy: Retain
{% if cloud_provider is defined and cloud_provider == "azure" %}
mountOptions:
  - dir_mode=0777
  - file_mode=0777
  - uid=1000
  - gid=1000
parameters:
  skuName: Standard_LRS
{% endif %}